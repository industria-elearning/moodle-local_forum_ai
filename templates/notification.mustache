{{!
    Template: local/forum_ai/templates/message/email_approval_request.mustache
    Context: Object containing notification data with i18n strings
    Variables:
    - firstname: string - Nombre del destinatario
    - discussionname: string - Nombre del debate
    - forumname: string - Nombre del foro
    - preview: string - Vista previa del mensaje (máx 150 caracteres)
    - reviewurl: string - URL para revisar
    - coursefullname: string - Nombre completo del curso
    - str_subject: string - Asunto (traducido)
    - str_preview_label: string - Etiqueta "Vista previa" (traducido)
    - str_review_button: string - Botón de revisión (traducido)
    - str_course_label: string - Etiqueta de curso (traducido)
}}

<div style="font-family: Arial, sans-serif; max-width: 600px; color: #333;">
    <h3 style="color: #0f6cbf; margin-bottom: 20px; font-size: 1.3em;">{{str_subject}}</h3>

    <p style="font-weight: bold; margin-bottom: 15px;">{{{str_greeting}}}</p>

    <p style="margin-bottom: 20px; line-height: 1.6;">{{#str}}notification_intro, local_forum_ai, {
        "discussion": "{{discussionname}}",
        "forum": "{{forumname}}",
        "course": "{{coursefullname}}"
    }{{/str}}</p>

    <div style="background-color: #f8f9fa; padding: 15px; border-left: 4px solid #0f6cbf; margin: 15px 0; border-radius: 4px;">
        <h4 style="margin-top: 0; margin-bottom: 10px; font-size: 1.1em; color: #333;">{{str_preview_label}}</h4>
        <div style="background: white; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 0.95em; line-height: 1.5; color: #555;">
            {{preview}}...
        </div>
    </div>

    <div style="margin: 20px 0; display: inline-block;">
        <a href="{{reviewurl}}" style="background-color: #0f6cbf; color: white; padding: 12px 25px; text-decoration: none; border-radius: 6px; display: inline-block; margin-right: 10px; font-weight: bold; border: none; cursor: pointer;">
            {{str_review_button}}
        </a>
    </div>

    <p style="color: #666; font-size: 0.9em; margin-top: 25px; padding-top: 15px; border-top: 1px solid #eee;">
        <strong style="color: #333;">{{str_course_label}}: {{coursefullname}}</strong>
    </p>
</div>
