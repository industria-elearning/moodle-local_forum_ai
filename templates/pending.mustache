{{!
    @template local_forum_ai/pending

    List of AI responses pending review.

    Example context (json):
    {
      "heading": "Pending responses",
      "haspendings": true,
      "pendings": [
        {
          "coursename": "History",
          "forumname": "Test forum",
          "discussionname": "Discussion 1",
          "discussionmsg": "Test message",
          "userfullname": "Student One",
          "preview": "Preview...",
          "token": "abc123",
          "approve": "Approve",
          "reject": "Reject",
          "viewdetails": "View details"
        }
      ],
      "col_course": "Course",
      "col_forum": "Forum",
      "col_discussion": "Discussion",
      "col_message": "Message",
      "col_user": "User",
      "col_preview": "Preview",
      "col_actions": "Actions",
      "noresponses": "No pending responses"
    }
}}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">{{heading}}</h2>

    {{#headerlogo}}
    <a class="local_assign_ai-logo-wrapper" href="https://datacurso.com/" target="_blank" rel="noopener noreferrer">
        <img src="{{logourl}}" alt="Datacurso Logo" class="local_forum_ai-pluginlogo">
    </a>
    {{/headerlogo}}
</div>

{{#haspendings}}
<table class="generaltable">
    <thead>
        <tr>
            <th>{{col_course}}</th>
            <th>{{col_forum}}</th>
            <th>{{col_discussion}}</th>
            <th>{{col_message}}</th>
            <th>{{col_user}}</th>
            <th>{{col_preview}}</th>
            <th>{{col_actions}}</th>
        </tr>
    </thead>
    <tbody>
    {{#pendings}}
        <tr>
            <td>{{coursename}}</td>
            <td>{{forumname}}</td>
            <td>{{discussionname}}</td>
            <td>{{{discussionmsg}}}</td>
            <td>{{userfullname}}</td>
            <td>{{preview}}</td>
            <td class="text-center">
                <div class="d-flex flex-column align-items-center">
                    <button class="btn btn-success btn-sm action-btn mb-2"
                            data-token="{{token}}" data-action="approve">{{approve}}</button>
                    <button class="btn btn-danger btn-sm action-btn mb-2"
                            data-token="{{token}}" data-action="reject">{{reject}}</button>
                    <button class="btn btn-info btn-sm view-details"
                            data-token="{{token}}">{{viewdetails}}</button>
                </div>
            </td>
        </tr>
    {{/pendings}}
    </tbody>
</table>
{{/haspendings}}

{{^haspendings}}
<div class="alert alert-info">{{noresponses}}</div>
{{/haspendings}}
