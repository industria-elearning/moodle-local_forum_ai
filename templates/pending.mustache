{{!
    @template local_forum_ai/pending

    Lista de respuestas AI pendientes de revisión.

    Example context (json):
    {
      "heading": "Respuestas pendientes",
      "haspendings": true,
      "pendings": [
        {
          "coursename": "Historia",
          "forumname": "Foro de prueba",
          "discussionname": "Discusión 1",
          "discussionmsg": "Mensaje de prueba",
          "userfullname": "Alumno Uno",
          "preview": "Vista previa...",
          "token": "abc123",
          "approve": "Aprobar",
          "reject": "Rechazar",
          "viewdetails": "Ver detalles"
        }
      ],
      "col_course": "Curso",
      "col_forum": "Foro",
      "col_discussion": "Discusión",
      "col_message": "Mensaje",
      "col_user": "Usuario",
      "col_preview": "Vista previa",
      "col_actions": "Acciones",
      "noresponses": "No hay respuestas pendientes"
    }
}}


<h2>{{heading}}</h2>

{{#haspendings}}
<table class="generaltable">
    <thead>
        <tr>
            <th>{{col_course}}</th>
            <th>{{col_forum}}</th>
            <th>{{col_discussion}}</th>
            <th>{{col_message}}</th>
            <th>{{col_user}}</th>
            <th>{{col_preview}}</th>
            <th>{{col_actions}}</th>
        </tr>
    </thead>
    <tbody>
    {{#pendings}}
        <tr>
            <td>{{coursename}}</td>
            <td>{{forumname}}</td>
            <td>{{discussionname}}</td>
            <td>{{{discussionmsg}}}</td>
            <td>{{userfullname}}</td>
            <td>{{preview}}</td>
            <td class="text-center">
                <div class="d-flex flex-column align-items-center">
                    <button class="btn btn-success btn-sm action-btn mb-2"
                            data-token="{{token}}" data-action="approve">{{approve}}</button>
                    <button class="btn btn-danger btn-sm action-btn mb-2"
                            data-token="{{token}}" data-action="reject">{{reject}}</button>
                    <button class="btn btn-info btn-sm view-details"
                            data-token="{{token}}">{{viewdetails}}</button>
                </div>
            </td>
        </tr>
    {{/pendings}}
    </tbody>
</table>
{{/haspendings}}

{{^haspendings}}
<div class="alert alert-info">{{noresponses}}</div>
{{/haspendings}}
