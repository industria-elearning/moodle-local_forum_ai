{{!
    @template local_forum_ai/history

    History of reviewed AI responses.

    Example context (json):
    {
      "heading": "Response history",
      "hashistory": true,
      "responses": [
        {
          "coursename": "Mathematics",
          "forumname": "AI Forum",
          "discussionname": "Past discussion",
          "discussionmsg": "Example message",
          "userfullname": "Student Two",
          "status": "Approved",
          "token": "xyz789",
          "viewdetails": "View details"
        }
      ],
      "col_course": "Course",
      "col_forum": "Forum",
      "col_discussion": "Discussion",
      "col_message": "Message",
      "col_user": "User",
      "col_status": "Status",
      "col_actions": "Actions",
      "noresponses": "No history"
    }
}}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">{{heading}}</h2>

    {{#headerlogo}}
    <a class="local_assign_ai-logo-wrapper" href="https://datacurso.com/" target="_blank" rel="noopener noreferrer">
        <img src="{{logourl}}" alt="Datacurso Logo" class="local_forum_ai-pluginlogo">
    </a>
    {{/headerlogo}}
</div>

{{#hashistory}}
<table class="generaltable">
    <thead>
        <tr>
            <th>{{col_course}}</th>
            <th>{{col_forum}}</th>
            <th>{{col_discussion}}</th>
            <th>{{col_message}}</th>
            <th>{{col_user}}</th>
            <th>{{col_status}}</th>
            <th>{{col_actions}}</th>
        </tr>
    </thead>
    <tbody>
    {{#responses}}
        <tr>
            <td>{{coursename}}</td>
            <td>{{forumname}}</td>
            <td>{{discussionname}}</td>
            <td>{{discussionmsg}}</td>
            <td>{{userfullname}}</td>
            <td>{{status}}</td>
            <td>
                <button class="btn btn-info btn-sm view-details" data-token="{{token}}">
                    {{viewdetails}}
                </button>
            </td>
        </tr>
    {{/responses}}
    </tbody>
</table>
{{/hashistory}}

{{^hashistory}}
<div class="alert alert-info">{{noresponses}}</div>
{{/hashistory}}
